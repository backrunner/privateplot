{
  "name": "private-plot",
  "type": "module",
  "version": "0.1.0",
  "author": "BackRunner",
  "description": "Yet another blog framework based on Astro",
  "license": "Apache-2.0",
  "scripts": {
    "postinstall": "patch-package",
    "dev": "npm run build:assets && astro dev",
    "build": "npm run build:assets && astro build",
    "build:assets": "node --experimental-strip-types scripts/build-assets.ts",
    "preview": "astro preview",
    "astro": "astro",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply privateplot --local",
    "db:migrate:prod": "wrangler d1 migrations apply privateplot --remote",
    "db:seed": "node --experimental-strip-types scripts/seed.ts",
    "generate:worker-types": "wrangler types"
  },
  "dependencies": {
    "@astrojs/cloudflare": "^12.2.1",
    "@astrojs/mdx": "^4.0.8",
    "@astrojs/preact": "^4.0.4",
    "@astrojs/rss": "^4.0.11",
    "@astrojs/sitemap": "^3.2.1",
    "@gerhobbelt/markdown-it-github-headings": "^2.0.0-2",
    "@paralleldrive/cuid2": "^2.2.2",
    "@shikijs/markdown-it": "^2.3.2",
    "artalk": "^2.9.1",
    "astro": "^5.3.0",
    "drizzle-orm": "^0.39.2",
    "js-yaml": "^4.1.0",
    "katex": "^0.16.21",
    "markdown-it": "^14.1.0",
    "markdown-it-emoji": "^3.0.0",
    "markdown-it-github-alerts": "^0.3.0",
    "markdown-it-katex": "^2.0.3",
    "markdown-it-task-lists": "^2.1.1",
    "marked": "^15.0.6",
    "preact": "^10.25.4",
    "shiki": "^2.3.2",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250204.0",
    "@types/js-yaml": "^4.0.9",
    "@types/markdown-it": "^14.1.2",
    "dotenv": "^16.4.7",
    "drizzle-kit": "^0.30.4",
    "gray-matter": "^4.0.3",
    "patch-package": "^8.0.0",
    "sass": "^1.84.0",
    "typescript": "^5.7.3",
    "wrangler": "^3.107.3"
  }
}
