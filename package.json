    "@shikijs/markdown-it": "^2.1.0",
    "astro": "^5.1.9",
    "drizzle-orm": "^0.38.4",
    "js-yaml": "^4.1.0",
    "katex": "^0.16.21",
    "markdown-it": "^14.1.0",
    "markdown-it-emoji": "^3.0.0",
    "markdown-it-github-alerts": "^0.3.0",
