{
  "name": "private-plot",
  "type": "module",
  "version": "0.1.0",
  "author": "BackRunner",
  "description": "Yet another blog framework based on Astro",
  "license": "Apache-2.0",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "db:generate": "drizzle-kit generate",
