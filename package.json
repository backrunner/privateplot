{
  "name": "private-plot",
  "type": "module",
  "version": "0.1.1",
  "author": "BackRunner",
  "description": "Yet another blog framework based on Astro",
  "license": "Apache-2.0",
  "scripts": {
    "postinstall": "patch-package",
    "dev": "npm run build:assets && astro dev",
    "build": "npm run build:assets && astro build",
    "build:assets": "node --experimental-strip-types scripts/build-assets.ts",
    "build:cli": "node --experimental-strip-types scripts/build-cli.ts",
    "preview": "astro preview",
    "astro": "astro",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply privateplot --local",
    "db:migrate:prod": "wrangler d1 migrations apply privateplot --remote",
    "db:seed": "node --experimental-strip-types scripts/seed.ts",
    "deploy": "npm run build && wrangler pages deploy dist --branch main",
    "generate:worker-types": "wrangler types"
  },
  "dependencies": {
    "@astrojs/cloudflare": "^12.5.3",
    "@astrojs/mdx": "^4.2.6",
    "@astrojs/preact": "^4.0.11",
    "@astrojs/rss": "^4.0.11",
    "@gerhobbelt/markdown-it-github-headings": "^2.0.0-2",
    "@paralleldrive/cuid2": "^2.2.2",
    "@shikijs/markdown-it": "^3.4.2",
    "artalk": "^2.9.1",
    "astro": "^5.7.13",
    "drizzle-orm": "^0.39.3",
    "js-yaml": "^4.1.0",
    "katex": "^0.16.22",
    "markdown-it": "^14.1.0",
    "markdown-it-emoji": "^3.0.0",
    "markdown-it-github-alerts": "^0.3.2",
    "markdown-it-katex": "^2.0.3",
    "markdown-it-task-lists": "^2.1.1",
    "marked": "^15.0.11",
    "postcss-100vh-fix": "^1.0.2",
    "preact": "^10.26.6",
    "shiki": "^3.4.2",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250519.0",
    "@types/js-yaml": "^4.0.9",
    "@types/markdown-it": "^14.1.2",
    "@vite-pwa/assets-generator": "^1.0.0",
    "@vite-pwa/astro": "^1.1.0",
    "dotenv": "^16.5.0",
    "drizzle-kit": "^0.30.6",
    "gray-matter": "^4.0.3",
    "patch-package": "^8.0.0",
    "sass": "^1.89.0",
    "typescript": "^5.8.3",
    "wrangler": "^3.114.8"
  }
}
