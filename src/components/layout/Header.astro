---
import { SITE_TITLE } from '../../consts';
---

<header class="site-header">
  <a href="/" class="left-section">
    <div class="site-avatar">
      <img src="/avatar.png" alt={SITE_TITLE} />
    </div>
    <div class="site-title">{SITE_TITLE}</div>
  </a>
</header>

<style lang="scss">
  .site-header {
    width: 100%;
    height: 80px;
    padding: 16px;
		box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: var(--block-bg);
    backdrop-filter: blur(8px);
		border-radius: 40px;

    .left-section {
      display: flex;
      align-items: center;
      text-decoration: none;

      .site-avatar {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        overflow: hidden;
				margin-right: 16px;
				filter: brightness(0.9);
				background-color: #323232;

        img {
          width: 100%;
          height: 100%;
          object-fit: cover;
        }
      }

      .site-title {
        font-size: 20px;
        font-weight: 600;
        margin: 0;
				letter-spacing: 0.5px;
      }
    }
  }
</style>
