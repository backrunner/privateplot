---
import { formatDate, isValidDate, areDifferentDates, getDateOptionsFromCf } from '../../utils/date';
import { ArticleComment } from './ArticleComment';

interface Props {
  title: string;
  createdDate: Date;
  updatedDate?: Date;
  meta?: Record<string, any> | null;
  slug: string;
}

const { title, createdDate, updatedDate, slug } = Astro.props;

const showCreatedDate = isValidDate(createdDate);
const showUpdatedDate = isValidDate(updatedDate) && areDifferentDates(createdDate, updatedDate);
const onlyCreatedDate = showCreatedDate && !showUpdatedDate;
const dateFormatOptions = getDateOptionsFromCf(Astro.locals.runtime.cf);
---

<article class="article-content">
  <div class="prose">
    <div class="title-container">
      <div class="title-border"></div>
      <h1 class="title">{title}</h1>
    </div>

    <div class="meta">
      {showUpdatedDate && updatedDate && <span class="date-capsule">Updated: {formatDate(updatedDate, dateFormatOptions)}</span>}
      {showCreatedDate && !onlyCreatedDate && <span class="date-capsule date-capsule--desktop-only">Created: {formatDate(createdDate, dateFormatOptions)}</span>}
      {onlyCreatedDate && <span class="date-capsule">{formatDate(createdDate, dateFormatOptions)}</span>}
    </div>

    <div class="content">
      <slot />
    </div>

    <ArticleComment slug={slug} title={title} client:only />
  </div>
</article>

<style lang="scss">
  .article-content {
    width: 100%;
    margin: 1.25em auto;
    padding: 2rem 2.5rem;
    box-sizing: border-box;
    border-radius: 2rem;
    background: var(--block-bg);
    backdrop-filter: blur(1.5rem);
    box-shadow: 2px 4px 12px 0 rgba(0, 0, 0, 0.1);
    transition: height 0.2s ease;

    /* Font optimization */
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-rendering: optimizeLegibility;

    @media (max-width: 540px) {
      padding: 1.25rem 1.25rem;
      border-radius: 1.5rem;
    }

    .title-container {
      position: relative;
      display: flex;
      align-items: center;

      .title-border {
        position: absolute;
        left: 0;
        width: 4px;
        height: 60%;
        background: rgba(255, 255, 255, 0.3);
        border-radius: 2px;
        box-sizing: border-box;
      }

      .title {
        font-size: 1.75rem;
        font-weight: 700;
        line-height: 1.3;
        padding-left: 1rem;
        margin: 1.5rem 0;
        letter-spacing: -0.02em;

        @media (max-width: 540px) {
          font-size: 1.35rem;
          padding-left: 0.75rem;
          margin: 1rem 0;
        }
      }
    }

    .meta {
      display: flex;
      gap: 0.75rem;
      margin-bottom: 2rem;

      @media (max-width: 540px) {
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 1.5rem;
      }

      .date-capsule {
        background: rgba(255, 255, 255, 0.1);
        padding: 0.35rem 0.75rem;
        border-radius: 20px;
        font-size: 0.875rem;

        @media (max-width: 540px) {
          padding: 0.25rem 0.5rem;
          font-size: 0.75rem;
        }
      }

      .date-capsule--desktop-only {
        display: inline-block;

        @media (max-width: 540px) {
          display: none;
        }
      }
    }

    .description {
      margin: 2rem 0;
      padding: 1.25rem 1.5rem;
      background: rgba(255, 255, 255, 0.05);
      border-left: 4px solid rgba(255, 255, 255, 0.2);
      border-radius: 0.5rem;
      font-size: 1.05rem;
      line-height: 1.75;

      @media (max-width: 540px) {
        margin: 1.5rem 0;
        padding: 1rem;
        font-size: 0.95rem;
      }
    }

    .content {
      font-size: 1.05rem;
      line-height: 1.8;
      word-wrap: break-word;

      @media (max-width: 540px) {
        font-size: 1rem;
        line-height: 1.7;
      }

      :global(h1) {
        font-size: 1.5rem;
        margin: 2.5rem 0 1.25rem;
        line-height: 1.3;
        letter-spacing: -0.01em;

        @media (max-width: 540px) {
          font-size: 1.25rem;
          margin: 2rem 0 1rem;
        }
      }

      :global(h2) {
        font-size: 1.35rem;
        margin: 2.25rem 0 1rem;
        line-height: 1.35;
        letter-spacing: -0.01em;

        @media (max-width: 540px) {
          font-size: 1.15rem;
          margin: 1.75rem 0 0.875rem;
        }
      }

      :global(h3) {
        font-size: 1.2rem;
        margin: 2rem 0 0.875rem;
        line-height: 1.4;

        @media (max-width: 540px) {
          font-size: 1.1rem;
          margin: 1.5rem 0 0.75rem;
        }
      }

      :global(h4) {
        font-size: 1.1rem;
        margin: 1.5rem 0 0.75rem;
        line-height: 1.5;

        @media (max-width: 540px) {
          font-size: 1.05rem;
          margin: 1.25rem 0 0.625rem;
        }
      }

      :global(h5) {
        font-size: 1.05rem;
        margin: 1.25rem 0 0.5rem;

        @media (max-width: 540px) {
          font-size: 1rem;
          margin: 1rem 0 0.5rem;
        }
      }

      :global(h6) {
        font-size: 1rem;
        margin: 1rem 0 0.5rem;
        color: rgba(255, 255, 255, 0.8);

        @media (max-width: 540px) {
          font-size: 0.95rem;
          margin: 0.875rem 0 0.5rem;
        }
      }

      :global(p) {
        margin: 1.25em 0;

        @media (max-width: 540px) {
          margin: 1em 0;
        }
      }

      :global(pre) {
        margin: 1.5rem 0;
        padding: 1.25rem;
        border-radius: 0.75rem;
        background-color: #0d1117;
        overflow-x: auto;
        line-height: 1.5;

        @media (max-width: 540px) {
          margin: 1.25rem 0;
          padding: 1rem;
          border-radius: 0.5rem;
        }
      }

      :global(code) {
        font-size: 0.875rem;
        font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;

        @media (max-width: 540px) {
          font-size: 0.8rem;
        }
      }

      :global(:not(pre) > code) {
        padding: 0.2em 0.4em;
        border-radius: 0.375rem;
        background-color: rgba(0, 0, 0, 0.3);
        margin: 0 0.1em;

        @media (max-width: 540px) {
          padding: 0.15rem 0.3rem;
        }
      }

      :global(blockquote) {
        margin: 2rem 0;
        padding: 1rem 1.5rem;
        border-left: 4px solid rgba(255, 255, 255, 0.2);
        background-color: rgba(255, 255, 255, 0.05);
        border-radius: 0.5rem;

        @media (max-width: 540px) {
          margin: 1.5rem 0;
          padding: 0.75rem 1rem;
          border-left: 3px solid rgba(255, 255, 255, 0.2);
        }

        :global(p) {
          margin: 0;
        }
      }

      :global(ul), :global(ol) {
        margin: 1.25rem 0;
        padding-left: 1.75rem;

        @media (max-width: 540px) {
          margin: 1rem 0;
          padding-left: 1.25rem;
        }

        :global(li) {
          margin: 0.5rem 0;
          padding-left: 0.25rem;

          @media (max-width: 540px) {
            margin: 0.375rem 0;
            padding-left: 0.25rem;
          }

          &::marker {
            color: rgba(255, 255, 255, 0.6);
          }
        }

        :global(ul), :global(ol) {
          margin: 0.5rem 0;

          @media (max-width: 540px) {
            margin: 0.375rem 0;
          }
        }
      }

      :global(img) {
        max-width: 100%;
        height: auto;
        margin: 2rem auto;
        border-radius: 0.75rem;
        display: block;
        filter: brightness(0.92);

        @media (max-width: 540px) {
          margin: 1.5rem auto;
          border-radius: 0.5rem;
        }
      }

      :global(hr) {
        margin: 3rem 0;
        border: none;
        border-top: 1px solid rgba(255, 255, 255, 0.2);

        @media (max-width: 540px) {
          margin: 2rem 0;
        }
      }

      :global(table) {
        width: 100%;
        margin: 2rem 0;
        border-collapse: collapse;

        @media (max-width: 540px) {
          margin: 1.5rem 0;
          font-size: 0.85rem;
          display: block;
          overflow-x: auto;
          white-space: nowrap;
        }

        :global(th), :global(td) {
          padding: 0.875rem;
          border: 1px solid rgba(255, 255, 255, 0.2);
          text-align: left;

          @media (max-width: 540px) {
            padding: 0.625rem;
          }
        }

        :global(th) {
          background-color: rgba(255, 255, 255, 0.1);
          font-weight: 600;
        }

        :global(tr:nth-child(even)) {
          background-color: rgba(255, 255, 255, 0.03);
        }
      }
    }
  }
</style>
